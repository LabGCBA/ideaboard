<% comentarios.each do |comentario| %>
                    <div class='comentario' id='comentario_<%= comentario.id %>'>
                        <div class='nombre'><%= comentario.persona.nombre_apellido %></div>
                        <% if ability.can? :destroy, comentario %>
                            <!--<a data-confirm="¿Seguro?" class="borrar_comentario" data-remote="true" rel="nofollow" data-method="delete" href="/expresometro/comentarios/<%= comentario.id %>">Borrar</a>-->
                            <%= link_to 'Borrar', comentario, method: :delete, data: { confirm: '¿Seguro?' }, :remote => true, :class => 'borrar_comentario' %>
                        <% end %>
                        <div class='texto'><%= comentario.texto %></div>
                    </div>
<% end %>