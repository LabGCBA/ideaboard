var newIdeaTextarea = $("#new_idea .pure-input-3-4");
var html = $('<%= 
    @idea.texto = @idea.texto.squish
    j(render(partial: 'ideas/idea', locals: { idea: @idea })) 
%>');

$(".ideas").prepend(html).masonry('prepended', html).masonry();
ideaCache.push("<%= j @texto_original %>");

html.boxfit({
    multiline: true,
    align_center: false
});

if (newIdeaTextarea.is(":focus")) {
    newIdeaTextarea.val(promptActive);
} 
else {
    newIdeaTextarea.val(prompt);
}

autosize.update(newIdeaTextarea)