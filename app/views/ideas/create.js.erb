var html = $('<%= 
    @idea.texto = @idea.texto.squish
    j(render(partial: 'ideas/idea', locals: { idea: @idea })) 
%>');

$(".ideas").prepend(html).masonry('prepended', html).masonry();
ideaCache.push("<%= @texto_original %>");

html.boxfit({
    multiline: true,
    align_center: false
});

$(this).attr('rows', '4');

if ($("#new_idea .pure-input-3-4").is(":focus")) {
    $("#new_idea .pure-input-3-4").val(promptActive);
} 
else {
    $("#new_idea .pure-input-3-4").val(prompt);
}